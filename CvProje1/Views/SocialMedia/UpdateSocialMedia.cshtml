@model CvProje1.Models.SocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.SocialMediaId)
    <label>Sosyal Medya Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Sosyal Medya İkonu</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <label>Sosyal Medya URL Adresi</label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

