@model CvProje1.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="m-4">Değerlendirme Güncelleme Ekranı</h2>

<form method="post">
    @Html.HiddenFor(x => x.ID)
    <label>Görsel Bağlantısı</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Yıldız Sayısı</label>
    @Html.TextBoxFor(x => x.Stars, new { @class = "form-control" })
    <br />
    <button class="btn btn-dark">Güncelle</button>
</form>